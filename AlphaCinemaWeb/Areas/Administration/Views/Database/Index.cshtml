@{
    ViewData["Title"] = "Database";
}

<!-- Card -->
<div class="card">
    <!-- Card image -->
    <div class="view overlay" style="height:250px;">
        <img class="card-img-top" src="~/images/AdminHome/Movie.jpg" alt="Card image cap">
        <a href="#!">
            <div class="mask rgba-white-slight"></div>
        </a>
    </div>

    <!-- Card content -->
    <div class="card-body">

        <!-- Title -->
        <h4 class="card-title text-center">Movie</h4>
        <!-- Text -->
        <p class="card-text text-center">Тук можете да редактирате информация за филмите в базата.</p>
        <!-- Button -->
        <div class="d-flex justify-content-center">
            <div class="form-row">
                <a asp-area="Administration" asp-controller="Movie" asp-action="Add" class="btn btn-secondary my-sm-0">Add</a>
                <a asp-area="Administration" asp-controller="Movie" asp-action="Update" class="btn btn-secondary my-sm-0">Update</a>
                <a asp-area="Administration" asp-controller="Movie" asp-action="Remove" class="btn btn-secondary my-sm-0">Remove</a>
            </div>
        </div>
    </div>
</div>
