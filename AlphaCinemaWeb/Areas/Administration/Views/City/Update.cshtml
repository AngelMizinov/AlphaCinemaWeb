@model CityUpdateViewModel

@{
    ViewData["Title"] = "Update City";
}
<div class="card">
    <div class="card-header">
        <h4>Update City name</h4>
    </div>
    <div class="card-body">
        <h5 class="card-title">Type city names</h5>
        <!-- Grid row -->
        <form asp-area="Administration" asp-controller="City" asp-action="Update" method="post">
            <div class="form-row">
                <!-- Grid column -->
                <div class="col-4">
                    <!-- Material input -->
                    <div class="md-form" style="margin-bottom:40px;">
                        <label asp-for="OldName" class="control-label">Old City Name</label>
                        <input asp-for="OldName" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="md-form">
                        <label asp-for="Name" class="control-label">New City Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- Grid row -->
            <button class="btn btn-light my-sm-0" type="submit">Update</button>
        </form>
        <br />
        <div asp-validation-summary="All" class="text-danger"></div>
        @await Html.PartialAsync("_CityResultPartial")
    </div>
</div>

