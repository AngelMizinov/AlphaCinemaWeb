@model CityViewModel

@{
    ViewData["Title"] = "Add";
}
<div class="card">
    <div class="card-header">
        <h4>Add City to database</h4>
    </div>
    <div class="card-body">
        <h5 class="card-title">Type a city name</h5>
        <!-- Grid row -->
        <form asp-area="Administration" asp-controller="City" asp-action="Add" method="post">
            <div class="form-row">
                <!-- Grid column -->
                <div class="col-4">
                    <!-- Material input -->
                    <div class="md-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="Name" class="control-label">City Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Grid row -->
            <button class="btn btn-light my-sm-0" type="submit">Add</button>
        </form>
    </div>
</div>

