@model CityUpdateViewModel

<div class="blockquote">
    <div>
        <font color="#343a40" size="4">@Model.Name</font>
    </div>
</div>


<form asp-area="Administration" asp-controller="City" asp-action="Update" method="post">

    <div class="form-row">
        <!-- Grid column -->

        <div class="col-4">
            <!-- Material input -->

            <div class="md-form">
                <label asp-for="Name" class="control-label">New Name</label>
                <input asp-for="Name" value="" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </div>
    <!-- Grid row -->
    <button class="btn btn-light my-sm-0" type="submit">Update</button>
</form>
<br />