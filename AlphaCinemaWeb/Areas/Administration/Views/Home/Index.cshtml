@{
    ViewData["Title"] = "Index";
}

<!-- Nav tabs -->
<ul class="nav nav-tabs" id="myTabAttr" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="movie-tab-attr" data-toggle="tab" href="#movie-attr" role="tab" aria-controls="movie-attr" aria-selected="true">Movie</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="city-tab-attr" data-toggle="tab" href="#city-attr" role="tab" aria-controls="city-attr" aria-selected="false">City</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="movie-attr" role="tabpanel" aria-labelledby="movie-tab-attr">
        <div class="card">
            <div class="card-header text-center">
                <h4>Available Movie operations</h4>
            </div>
            <div class="form-row">
                <div class="card-body col-5">
                    <a asp-area="Administration" asp-controller="Movie" asp-action="Add" class="btn btn-light my-sm-0">Add Movie</a>
                </div>
                <div class="card-body col-5">
                    <a asp-area="Administration" asp-controller="Movie" asp-action="Update" class="btn btn-light my-sm-0">Update Movie</a>
                </div>
                <div class="card-body col-2">
                    <a asp-area="Administration" asp-controller="Movie" asp-action="Remove" class="btn btn-light my-sm-0">Remove Movie</a>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane" id="city-attr" role="tabpanel" aria-labelledby="city-tab-attr">
        <div class="card">
            <div class="card-header text-center">
                <h4>Available City operations</h4>
            </div>
            <div class="form-row">
                <div class="card-body col-5">
                    <a asp-area="Administration" asp-controller="City" asp-action="Add" class="btn btn-light my-sm-0">Add City</a>
                </div>
                <div class="card-body col-5">
                    <a asp-area="Administration" asp-controller="City" asp-action="Update" class="btn btn-light my-sm-0">Update City</a>
                </div>
                <div class="card-body col-2">
                    <a asp-area="Administration" asp-controller="City" asp-action="Remove" class="btn btn-light my-sm-0">Remove City</a>
                </div>
            </div>
        </div>
    </div>
</div>

