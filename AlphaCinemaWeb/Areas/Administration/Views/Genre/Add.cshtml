@model GenreViewModel

@{
    ViewData["Title"] = "Add Genre";
}
<div class="card">
    <div class="card-header">
        <h4>Add Genre into database</h4>
    </div>
    <div class="card-body">
        <h5 class="card-title">Type a genre name</h5>
        <!-- Grid row -->
        <form asp-area="Administration" asp-controller="Genre" asp-action="Add" method="post">
            <div class="form-row">
                <!-- Grid column -->
                <div class="col-4">
                    <!-- Material input -->
                    <div class="md-form">
                        <label asp-for="Name" class="control-label">Genre Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- Grid row -->
            <button class="btn btn-dark-green waves-effect my-sm-0" type="submit">Add</button>
            <a asp-area="Administration" asp-controller="Database" asp-action="Index" class="btn btn-primary waves-effect">Go Back</a>

        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
        @await Html.PartialAsync("_ResultPartial")
    </div>
</div>