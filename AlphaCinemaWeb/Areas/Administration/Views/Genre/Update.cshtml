@model GenreUpdateListViewModel

@{
    ViewData["Title"] = "Update Genre";
}
<div class="card">
    <div class="card-header">
        <h4>Update Genre name</h4>
    </div>
    <div class="card-body">
        <!-- Grid row -->

        <div class="d-inline-block">
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-light my-sm-0 btn-info dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        Choose Genre
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        @foreach (var genre in Model.Genres)
                        {
                            <a class="dropdown-item" asp-controller="Genre" asp-action="SetId" asp-route-genreId="@genre.Id" asp-route-genreName="@genre.Name"
                               data-ajax="true" data-ajax-update="#genre-form">@genre.Name</a>
                        }
                    </div>

                    <div>
                        <h3></h3>
                    </div>

                </div>
            </div>
        </div>

        <div id="genre-form">
            <partial name="_GenreInputPartial" model="@(new GenreUpdateViewModel())" />
        </div>


        @await Html.PartialAsync("_ResultPartial")
    </div>
</div>
