@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li>
                    <a asp-action="Index" class="btn btn-danger" role="link">Change password</a>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)

    <script>
        $(() => {
            const activeLinkSelector = "a[href='" + location.pathname + "']";
            $(activeLinkSelector).parents('li').addClass('active');
        });
    </script>
}

