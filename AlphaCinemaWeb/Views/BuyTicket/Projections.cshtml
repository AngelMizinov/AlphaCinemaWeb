@model ProjectionListViewModel
@using AlphaCinemaWeb.Models.BindingModels.ProjectionModels
@{
    ViewData["Title"] = "Projections";
}

<div id="assets">
    <h2 style="padding: 20px 0px;">Movie Catalog</h2>
    <div id="assetsTable">
        <table class="table table-condensed" id="catalogIndexTable">
            <thead>
                <!--The <thread> tag is used to group header content in an HTML table.
                   The <thread> element is used in conjunction with the <tbody> and
                <tfoot> elements to specify each part of a table (header, body, footer).-->
                <tr class="header peach-gradient">
                    <th style="font-size: 20px; font-weight: bold">Image</th>
                    <th style="font-size: 20px; font-weight: bold">Title</th>
                    <th style="font-size: 20px; font-weight: bold">Genres</th>
                    <th style="font-size: 20px; font-weight: bold">Duration</th>
                    <th style="font-size: 20px; font-weight: bold">Starting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Projections)
                {
                    <tr class="assetRow">
                        <td>
                            <a asp-controller="BuyTicket" asp-action="Detail" asp-route-projection="@movie">
                                @if (movie.ImageUrl == null)
                                {
                                    <img src="~/images/defaultMovie.jpg" class="imageCell" />
                                }
                                else
                                {
                                    <img src="movie.ImageUrl" class="imageCell" />
                                }
                            </a>
                        </td>
                        <td>@movie.MovieName</td>
                        <td>
                            @foreach (var genre in movie.Genres)
                            {
                                <p>@genre </p>
                            }
                        </td>
                        <td>@movie.MovieDuration</td>
                        <td>@movie.MovieStart</td>
                        @if (User.Identity.IsAuthenticated)
                        {
                        <td>
                            @{var projection = new ProjectionBookModel();}
                            <form asp-controller="BuyTicket" asp-action="Book" method="post" data-ajax="true" data-ajax-update="#ProjectionList">
                                <input type="hidden" asp-for="@projection.UserName" value="@User.Identity.Name" />
                                <input type="hidden" asp-for="@projection.ProjectionId" value="@movie.ProjectionId" />
                                <input type="hidden" asp-for="@projection.Day" value="@Model.Day" />
                                <input type="hidden" asp-for="@projection.CityId" value="@Model.CityId" />
                                <button type="submit" class="btn btn-lg btn-success">Book</button>
                            </form>
                        </td>
                        }
                    </tr>
                }
        </table>
    </div>
</div>

