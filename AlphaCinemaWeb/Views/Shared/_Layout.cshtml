<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Cinema</title>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/mdb/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/mdb/css/mdb.min.css" />
        <link rel="stylesheet" href="~/lib/mdb/css/style.css" /> @*This is our custom styles*@
        <link rel="stylesheet" href="~/lib/mdb/font/roboto/Roboto-Regular.ttf">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/mdb/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/mdb/css/mdb.min.css" />
        <link rel="stylesheet" href="~/lib/mdb/css/style.css" /> @*This is our custom styles*@
        <link rel="stylesheet" href="~/lib/mdb/font/roboto/Roboto-Regular.ttf">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

</head>
<body>
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <!-- Navbar brand -->
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Alpha Cinema</a>

        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="basicExampleNav">

            <!-- Links -->
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Some Controller</a>
                </li>
            </ul>
            <!-- Split button -->
            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <div class="btn-group">
                    <a asp-area="Administration" asp-controller="Home" asp-action="Index"
                       class="btn btn-light my-sm-0" role="button" style="height:38px; padding-top:10px;">Admin</a>

                    <button type="button" class="btn btn-light dropdown-toggle px-3" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false" style="height:38px; padding-top:10px;">
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu">
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="dropdown-item">Add Movie</a>
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="dropdown-item">Update Movie</a>
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="dropdown-item">Delete Movie</a>
                        <div class="dropdown-divider"></div>
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="dropdown-item">Add City</a>
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="dropdown-item">Update City</a>
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index" class="dropdown-item">Delete City</a>
                    </div>
                </div>
            }
            @await Html.PartialAsync("_LoginPartial")
            <!-- Links -->
            <!--/.Navbar-->
        </div>
        <!-- Collapsible content -->
    </nav>
    <div class="container body-content" style="margin-top:40px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Fake Agents™</p>
        </footer>
    </div>
    <environment include="Development">
        <script src="~/lib//mdb/js/jquery-3.3.1.min.js"></script>
        <script src="~/lib//mdb/js/popper.min.js"></script>
        <script src="~/lib//mdb/js/bootstrap.min.js"></script>
        <script src="~/lib//mdb/js/mdb.min.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib//mdb/js/jquery-3.3.1.min.js"></script>
        <script src="~/lib//mdb/js/popper.min.js"></script>
        <script src="~/lib//mdb/js/bootstrap.min.js"></script>
        <script src="~/lib//mdb/js/mdb.min.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
